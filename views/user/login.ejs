<div class='container'>
  <div class='row'>
    <div class='col-lg-4 col-lg-offset-4'>
      <div class='row'>
        <div class='col-lg-12'>
          <h3 class='text-center'>Login Here</h3>
        </div>
      </div>
      <form action='/user/login' method='post'>
        <div class='row'>
          <div class='col-lg-12'>
            <input type='text' name='tbEmailLogin' placeholder='E-mail' class='form-control tbEmailLogin' required>
          </div>
        </div>
        <div class='row'>
          <div class='col-lg-12'>
            <input type='password' name='tbPasswordLogin' placeholder='Password' class='form-control tbPasswordLogin' required>
          </div>
        </div>
        <div class='row'>
          <div class='col-lg-12'>
            <div class='msgBox'>
            </div>
          </div>
        </div>
        <br>
        <div class='row'>
          <div class='col-lg-4 col-lg-offset-4'>
            <input type='submit' name='btnLogin' class='btn btn-info btnLogin' value='Login'>
          </div>
        </div>
        <input type='hidden' name='_csrf' value='<%= _csrf %>' />
      </form>
    </div>
  </div>
</div>
